{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",

        "moduleResolution": "node",

        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "skipLibCheck": true,
        "target": "es6",
        "lib": ["es6"],
        "types": ["reflect-metadata", "jest"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true
    }
}
